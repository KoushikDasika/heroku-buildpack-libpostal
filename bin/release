#!/usr/bin/env bash
# bin/release <build-dir>

cat << EOF
---
config_vars:
  LD_LIBRARY_PATH: /app/.heroku/vendor/libpostal/lib:$LD_LIBRARY_PATH
  LIBRARY_PATH: /app/.heroku/vendor/libpostal/lib:$LIBRARY_PATH
  CPATH: /app/.heroku/vendor/libpostal/include:$CPATH
  LIBPOSTAL_DATA_DIR: /app/.heroku/vendor/libpostal/data
  PATH: /app/.heroku/vendor/libpostal/bin:$PATH
EOF